import background from '../assets/background.svg';
import astroLogo from '../assets/astro.svg';
import "../pages/style.css";
const pages=[
    {
        slug:'/',
        name:'index',

    },
    {
        slug:'/galeria',
        name:'Galeria',
        
    },
     {
        slug:'/formulario-registrar',
        name:'Contacto',
        
    },
]

export async function getStaticPaths() {
  return pages.map(({ slug, name }) => {
    return {
      params: { slug:{slug} },
      props: { name },
    };
  });
}

